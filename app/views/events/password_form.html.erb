<h1>Доступ только по пин-коду</h1>
<%= form_with(model: @event, local: true, method: 'post') do |f| %>
  <div class="form-group">
    <%= label_tag t('activerecord.attributes.event.pincode') %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>
  <div class="actions">
    <%= submit_tag t('events.confirm'), class: 'btn btn-primary' %>
  </div>
<% end %>
<nav class="nav">
  <%= link_to 'На главную', events_path, class: "nav-link pl-0" %>
</nav>
