<h2><%= t('.change_your_password') %></h2>
<%= form_with(model: resource, as: resource_name, local: true, url: password_path(resource_name),  method: :put) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="form-group">
    <%= label_tag('exampleInputPassword1', t('.new_password'), class: 'font-weight-bold') %>
    <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
    <%= f.password_field :password, class: "form-control", 
                                    id: "exampleInputPassword1",
                                    placeholder: t('.new_password') %>
  </div>
  <div class="form-group">
    <%= label_tag('exampleInputPassword2', t('.confirm_new_password'), class: 'font-weight-bold') %>
    <%= f.password_field :password_confirmation, class: "form-control", 
                                                 id: "exampleInputPassword2",
                                                 placeholder: t('.confirm_new_password') %>
  </div>
  <div class="actions">
    <%= f.submit t('.change_my_password'), class: 'btn btn-primary' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
