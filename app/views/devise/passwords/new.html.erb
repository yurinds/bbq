<h2>Забыли пароль?</h2>
<%= form_with(model: resource, as: resource_name, local: true, url: password_path(resource_name), method: :post) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: resource} %>
  <div class="form-group">
    <%= label_tag('exampleInputEmail1', 'Email', class: 'font-weight-bold') %>
    <%= f.email_field :email, autofocus: true, 
                              autocomplete: "email", 
                              class: "form-control", 
                              id:"exampleInputEmail1", 
                              placeholder:"Email" %>
  </div>
  <div class="actions">
    <%= f.submit "Отправить инструкции для восстановления пароля", class: 'btn btn-primary' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
