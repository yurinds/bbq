<nav class="nav">
  <% if controller_name == 'sessions' %>
    <%= link_to "Регистрация", new_registration_path(resource_name), class: "nav-link pl-0" %>
    <%= link_to "Забыли пароль?", new_password_path(resource_name), class: "nav-link pl-0" %>
  <% end %>
  <% if controller_name == 'registrations' %>
    <%= link_to "Войти", new_session_path(resource_name), class: "nav-link pl-0" %>
    <%= link_to "Забыли пароль?", new_password_path(resource_name), class: "nav-link pl-0" %>
  <% end %>
  <% if controller_name == 'passwords' %>
    <%= link_to "Войти", new_session_path(resource_name), class: "nav-link pl-0" %>
    <%= link_to "Регистрация", new_registration_path(resource_name), class: "nav-link pl-0" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <% if resource_class.omniauth_providers.include?(:facebook) %>
      <%= link_to "Войти через Facebook", omniauth_authorize_path(resource_name, :facebook), class: "nav-link pl-0" %>
    <% end %>
    <% if resource_class.omniauth_providers.include?(:vkontakte) %>
      <%= link_to "Войти через VK", omniauth_authorize_path(resource_name, :vkontakte), class: "nav-link pl-0" %>
    <% end %>
  <% end -%>

</nav>
